<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  function Cart(price, amount, name, url, description) {
    const product = `
        <div class="w-[90%] md:w-72 bg-gray-100 rounded-lg shadow-lg overflow-hidden transform transition-transform hover:scale-105 duration-300">
          <img class="w-full h-48 object-cover" src="${url}" alt="${name}">
          <div class="p-4">
            <p class="text-xl font-bold mb-2">${name}</p>
            <p class="text-gray-400 mb-2">${description}</p>
            <p class="text-lg font-semibold mb-4">Rs. ${price}</p>
            <form class="pay-form">
              <input type="hidden" value="${name}" name="name">
              <input type="hidden" value="${price}" name="amount">
              <input type="hidden" value="${description}" name="description">
              <input type="submit" value="Pay Now" class="w-full bg-indigo-600 text-gray-100 py-2 rounded-lg cursor-pointer hover:bg-indigo-700 transition-colors duration-300">
            </form>
          </div>
        </div>`;
    document.getElementById('product').innerHTML += product;
  }

  // Example fruits array
  const fruits = [
    { price: 50, amount: 1, name: "Apple", url: "https://images.unsplash.com/photo-1570913149827-d2ac84ab3f9a?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", description: "A sweet, crisp fruit." },
    { price: 30, amount: 1, name: "Banana", url: "https://images.unsplash.com/photo-1571771894821-ce9b6c11b08e?q=80&w=1780&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", description: "A soft, tropical fruit." },
    { price: 40, amount: 1, name: "Cherry", url: "https://images.unsplash.com/photo-1591299176816-1fd7bdb628db?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", description: "A small, juicy red fruit." },
    { price: 20, amount: 1, name: "Lichi", url: "https://rukminim2.flixcart.com/image/850/1000/kzpw2vk0/plant-seed/x/d/5/5-c-litchi4-chalisa-original-imagbnwewuqedrut.jpeg?q=90&crop=false", description: "A sweet, chewy fruit." },
    { price: 25, amount: 1, name: "Elderberry", url: "https://images.unsplash.com/photo-1661896265359-a7eef1d01125?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", description: "A tart, purple fruit." },
    { price: 15, amount: 1, name: "Fig", url: "https://plus.unsplash.com/premium_photo-1663854478340-f7b09473c8ff?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", description: "A soft, sweet fruit." },
    { price: 10, amount: 1, name: "Grape", url: "https://images.unsplash.com/photo-1423483641154-5411ec9c0ddf?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", description: "A small, sweet fruit." },
    { price: 45, amount: 1, name: "Honeydew", url: "https://images.unsplash.com/photo-1602597190461-43774583d3c0?q=80&w=1932&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", description: "A sweet, green melon." },
  ];

  // Generate and append 10 fruits
  fruits.forEach(fruit => {
    Cart(fruit.price, fruit.amount, fruit.name, fruit.url, fruit.description);
  });

  $(document).ready(() => {
    $('.pay-form').submit(function (e) {
      e.preventDefault();
      var formData = $(this).serialize();
      $.ajax({
        url: '/createOrder',
        type: 'POST',
        data: formData,
        success: function (res) {
          if (res.success) {
            var options = {
              "key": res.key_id,
              "amount": res.amount,
              "currency": "INR",
              "name": res.product_name,
              "image": "https://plus.unsplash.com/premium_photo-1678187782578-70b5a348f502?q=80&w=1780&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
              "order_id": res.order_id,
              "handler": function (response) {
                alert('Payment Successful');
              },
              "prefill": {
                "contact": res.contact,
                "name": res.name,
                "email": res.email
              },
              "notes": {
                "description": res.description
              },
              "theme": {
                "color": "#2300a3"
              }
            };
            var razorpayObject = new Razorpay(options);
            razorpayObject.on('payment.failed', function (response) {
              alert('Payment Failed');
            });
            razorpayObject.open();
          } else {
            alert(res.msg);
          }
        }
      });
    });
  });
</script>
